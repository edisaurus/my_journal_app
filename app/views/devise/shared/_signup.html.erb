<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
    <p class="h1 lead fw-normal mb-0 me-3 text-center">Storify
      <small class="text-muted">your daily logbook</small>
    </p>
  </div>

  <div class="divider d-flex align-items-center my-4">
    <p class="text-center fw-bold mx-3 mb-0">Sign Up</p>
  </div>

  <div class="form-outline mb-4">
    <%= f.text_field :username,
                     class:'form-control form-control-lg',
                     placeholder:'Username' %>
  </div>

  <div class="form-outline mb-4">
    <%= f.email_field :email, 
                      autofocus: true, 
                      autocomplete: "email",
                      class:'form-control form-control-lg',
                      placeholder:'Email address' %>
  </div>

  <div class="form-outline mb-4">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password,
                         autocomplete: "new-password",
                         class:'form-control form-control-lg',
                         placeholder:'Password' %>
  </div>

  <div class="form-outline mb-4">
    <%= f.label :password_confirmation, class:'label' %>
    <%= f.password_field :password_confirmation, 
                         autocomplete: "new-password",
                         class:'form-control form-control-lg',
                         placeholder:'Confirm Password' %>
  </div>

  <div class="text-center text-lg-start mt-4 pt-2">
    <%= f.submit "SIGN UP", class:'btn btn-primary btn-lg' %>
    <p class="small fw-bold mt-2 pt-1 mb-0">
      Already have an account? 
      <a href="#!" class="link-danger"><%= render "devise/shared/register_links" %></a>
    </p> 
  </div>
<% end %>   