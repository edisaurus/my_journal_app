<div id="signin-signup" class="form-group">
  <div id="omni-auth" class="form-group">
    <h2>Sign up with</h2>
    <p>
      <button class="btn btn-primary btn-block">Facebook
      </button>
    </p>
    <p>
      <button class="btn btn-info btn-block">Twitter
      </button>
    </p>
    <p>
      <button class="btn btn-dark btn-block">Github
      </button>
    </p>
  </div>
  <div id="sign-in" class="form-group">

    <%= notice %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.text_field :signin, 
                         autofocus: true, 
                         class: 'form-control',
                         placeholder: 'Email, Username, First or Last name' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, 
                             class: 'form-control',
                             placeholder: 'Password' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group form-check">
          <span><%= f.check_box :remember_me, 
                                class: 'form-check-input' %></span>
          <span><%= f.label :remember_me, 
                             class: 'form-check-label' %></span>
        </div>
      <% end %>

      <div>
        <%= f.submit "Sign in", class:'btn btn-primary btn-block' %>
      </div>
    <% end %>
    <hr>
    <div id="shared-links">
      <div>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        <% end %>
      </div>
      <div>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "New Member?", new_registration_path(resource_name) %>
        <% end %>
      </div>
    </div>
  </diV>
</div>

